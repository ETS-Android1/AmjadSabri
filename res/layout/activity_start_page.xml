<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".StartPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffeed4"></RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_marginTop="5dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/toplg"
        android:background="@drawable/sabriback"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/toplg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:id="@+id/lineBr"
        android:layout_marginBottom="20dp"
        android:background="#ccb3b3"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/toplg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:id="@+id/lineBr2"
        android:layout_marginBottom="20dp"
        android:background="#ccb3b3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lineBr2"
        android:id="@+id/lvvvcarry"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_above="@+id/shareCarry">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btncolor_8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/btncolor_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btnstate"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/audioBut"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="#3e2620"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:typeface="serif"
                    android:elevation="5dp"
                    android:text="Audio"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingLeft="15dp"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f1ffffff"
                android:textStyle="normal"
                android:textSize="16sp"
                android:typeface="serif"
                    android:visibility="gone"
                android:elevation="5dp"
                android:text="@string/app_name"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/audbrk"
                    android:orientation="vertical"
                    android:background="#83ff0e00"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@+id/vdobrk"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#fff6f6"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/audic"
                        android:background="@drawable/ic_music_note_black_24dp"
                        />
                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#fff6f6"/>



                </LinearLayout>


            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btncolor_8"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/btncolor_1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/btnstate"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:id="@+id/videoBut"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textColor="#3e2620"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:typeface="serif"
                            android:elevation="5dp"
                            android:text="Video"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#f1ffffff"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:typeface="serif"
                            android:visibility="gone"
                            android:elevation="5dp"
                            android:text="@string/app_name"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"/>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/vdobrk"
                            android:orientation="vertical"
                            android:background="#83ff0e00"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"></LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_below="@+id/vdobrk"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="#fff6f6"/>
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/vdoic"
                                android:background="@drawable/ic_videocam_black_24dp"
                                />

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="#fff6f6"/>
                        </LinearLayout>
                </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/socialcolor"
        android:id="@+id/shareCarry"
        android:layout_above="@+id/dtadViewmain">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:id="@+id/share"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_share_black_24dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxHeight="35dp"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:text="More Apps"
                    android:id="@+id/more_apps"
                    android:background="@drawable/btnstate"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/fbCarry"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/shareCarry"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:id="@+id/fbI"
                    android:background="@drawable/fbi"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rateushome"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/ic_thumb_up_black_24dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxHeight="35dp"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:text="Facebook"
                    android:id="@+id/fb_share"
                    android:background="@drawable/btnstate_sp"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:id="@+id/dtadViewmain"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer">

    </com.google.android.gms.ads.AdView>

</RelativeLayout>

