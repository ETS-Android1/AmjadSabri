<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/sabriback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_above="@+id/dtadViewmain"
        android:id="@+id/mediaViewMake">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/toplg">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/toplg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:id="@+id/lineBr"
            android:layout_marginBottom="20dp"
            android:background="#ccb3b3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/toplg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:id="@+id/lineBr2"
            android:layout_marginBottom="20dp"
            android:background="#ccb3b3"/>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/player"
            android:layout_centerInParent="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekbar"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="70dp"
                    android:contentDescription="@string/condescri"
                    android:layout_height="70dp"
                    android:layout_marginRight="40dp"
                    android:id="@+id/btnstart"
                    android:layout_marginEnd="40dp" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/condescri"
                    android:id="@+id/btnreply"/>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="60dp"
                        android:gravity="center"
                        android:layout_marginEnd="60dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/prevPl"
                            android:contentDescription="@string/condescri"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                            android:layout_marginStart="30dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/nextPl"
                            android:contentDescription="@string/condescri"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:layout_marginEnd="20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/socialcolor"
            android:id="@+id/shareCarry"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/player">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:id="@+id/share"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/ic_share_black_24dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:maxHeight="35dp"
                        android:textColor="#ffffff"
                        android:padding="5dp"
                        android:text="More Apps"
                        android:id="@+id/more_apps"
                        android:background="@drawable/btnstate"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/fbCarry"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/shareCarry"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center"
                        android:id="@+id/fbI"
                        android:background="@drawable/fbi"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:id="@+id/rateushome"
                        android:layout_marginLeft="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/ic_thumb_up_black_24dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:maxHeight="35dp"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:text="Facebook"
                        android:id="@+id/fb_share"
                        android:background="@drawable/btnstate_sp"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:id="@+id/dtadViewmain"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer">

    </com.google.android.gms.ads.AdView>


</RelativeLayout>
